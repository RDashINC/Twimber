<div class='section-header'>
  <div class='section-icon'>
    <i class='fa fa-user'></i>
  </div>
  <div class='section-header-text'>
	  {{screen_name}}/tweets
  </div>
  <div class='section-icon-settings'>
	   <i class='glyphicon glyphicon-remove' onclick=''></i>
  </div>
</div>

<div class='info' id='{{screen_name}}'>
 <div class='{{name}}-bkg' id='info-background' style='z-index:200;'></div>
 <div class='info-wrapper' style='z-index:1000;'>
   <img src='{{img}}'/>
   <br />
   <div class='entities-username'>{{name}}</div>
   <a class='entities-at' href='http://twitter.com/{{screen_name}}'>@{{screen_name}}</a>
   <p class='entities-bio'>{{description}}</p>
 </div>
</div>
<div class='rollup rb' id='{{screen_name}}-rlup' onclick='hide("{{screen_name}}")'>
  <i class='fa fa-chevron-up rollup-btn'></i>
</div>
<div id='section-body-{{screen_name}}' class='section-body'>
  <div class='section-tweets' id='{{name}}-t-tweets'>
	   <div class='loading-gif-wrapper'><img class='loading-gif' src='img/load.gif' /></div>
   </div>
</div>
